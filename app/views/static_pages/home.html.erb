<% if signed_in? %>

	<div class="row">
		<aside class="span4">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="span8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>

<% else %>

	<%=  provide(:title, "Home")  %>

	<div class= "center hero-unit">
		<h1>Welcome to the Rails Drills App</h1>

		<p>This is the home page for the <%= link_to "Rails Drills App", "http://www.railstutorial.com/" %></p>
		<%= link_to "Sign Up Now!", signup_path, class: "btn btn-primary" %>
	</div>

<% end %>
<% if @user.microposts.any? %>
<li>
	<span class="content">
		<%= micropost.content %>
	</span>
	<span class="timestamp"> 
		Posted <%= time_ago_in_words(micropost.created_at) %>
	</span>
	<% if current_user?(@user) %>
		<%= link_to "delete", micropost, method: :delete, confirm: "Are you sure?" %>
	<% end %>
</li>
<% end %>